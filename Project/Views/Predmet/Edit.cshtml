@model Project.Models.ModelViews.Predmet.EditView;
<h2>Редактирование предметь</h2>
<form asp-action="edit"  asp-controller="Predmet" asp-route-id="@Model.Predmet!.Id">
   
    @Html.HiddenFor(model=>model.Predmet!.Id)
    <p>
         <select asp-for="Predmet!.SpecId" asp-items="Model.SpecList"></select>
    </p>
   <p>
        <label>Семестер: </label>
        <select asp-for="Predmet!.Semesetr" asp-items="Model.SemestList"></select>
    </p>

    <p>
        <label asp-for="Predmet!.PredmetName" >Имя</label><br />
        <input type="text" asp-for="Predmet!.PredmetName">
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p> 
</form>